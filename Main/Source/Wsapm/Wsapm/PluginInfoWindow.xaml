<Window x:Class="Wsapm.PluginInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:Wsapm.Resources"
        Title="{x:Static res:Wsapm.PluginInfoWindow_Title}"
        Height="500" Width="600" WindowStyle="ToolWindow" Topmost="True">
    <DockPanel LastChildFill="True" Margin="10">
        <Button Name="buttonOk" HorizontalAlignment="Right" Width="75" Content="{x:Static res:Wsapm.General_ButtonOK}" DockPanel.Dock="Bottom" Click="buttonOk_Click"></Button>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="2" Margin="5,0,0,0">
            <TextBlock Name="textBlockPluginInfo" TextWrapping="Wrap"></TextBlock>
        </ScrollViewer>
    </DockPanel>
</Window>
